{
  "name": "redux-fetch-resource",
  "version": "0.0.0-semantic-versioning",
  "description": "A Complete solution for making Requests in redux applications",
  "main": "dist/lib/index.js",
  "scripts": {
    "commit": "git-cz",
    "start": "npm run test:watch",
    "lint": "semistandard src/**",
    "prebuid": "rimraf dist coverage .nyc_output",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist/lib src",
    "build:umd": "webpack --output-filename redux-fetch-resource.js",
    "build:umd.min": "webpack --output-filename redux-fetch-resource.min.js -p",
    "test": "ava",
    "test:watch": "cross-env NODE_ENV=development npm t -- -watch",
    "test:coverage": "cross-env NODE_ENV=testing nyc npm t",
    "coverage:check": "nyc check-coverage",
    "coverage:report": "nyc report --reporter=lcov",
    "coverage:coveralls": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "stickycube",
  "license": "ISC",
  "devDependencies": {
    "ava": "0.16.0",
    "ava-spec": "1.0.1",
    "babel-cli": "6.14.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.5",
    "babel-plugin-istanbul": "2.0.1",
    "babel-plugin-syntax-async-functions": "6.13.0",
    "babel-plugin-transform-regenerator": "6.14.0",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.14.0",
    "commitizen": "2.8.6",
    "cross-env": "2.0.1",
    "cz-conventional-changelog": "1.2.0",
    "express": "4.14.0",
    "ghooks": "1.3.2",
    "jsdom": "9.5.0",
    "mocha": "3.0.2",
    "npm-run-all": "3.1.0",
    "nyc": "8.3.0",
    "redux": "3.6.0",
    "redux-thunk": "2.1.0",
    "rimraf": "2.5.4",
    "semantic-release": "^4.3.5",
    "semistandard": "9.0.0",
    "sinon": "1.17.5",
    "webpack": "1.13.2"
  },
  "peerDependencies": {
    "redux-thunk": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StickyCube/redux-fetch-resource.git"
  },
  "dependencies": {
    "lodash": "4.16.0",
    "warning": "3.0.0"
  },
  "semistandard": {
    "parser": "babel-eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm t"
    }
  },
  "nyc": {
    "statements": 90,
    "lines": 90,
    "functions": 90,
    "branches": 90,
    "include": [
      "src/**"
    ],
    "require": [
      "babel-register"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "ava": {
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    },
    "files": [
      "**/*.spec.js"
    ],
    "source": [
      "./src/**/*.js"
    ],
    "require": [
      "babel-polyfill",
      "babel-register"
    ],
    "verbose": true,
    "serial": true
  }
}
